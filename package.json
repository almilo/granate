{
  "name": "granate",
  "description": "Granate container for annotated GraphQL",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc",
    "pretest": "npm run compile",
    "test": "mocha 'dist/**/*.spec.js' -r dist/support.spec.js",
    "dev": "npm run compile -- --watch | npm test -- --watch",
    "build": "rimraf dist && npm test",
    "postinstall": "typings install",
    "prepublish": "npm build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Alberto Mijares <almilo@almilo.es>",
  "license": "MIT",
  "keywords": [
    "granate",
    "server",
    "GraphQL",
    "annotations",
    "directives"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/almilo/granate"
  },
  "dependencies": {
    "graphql": ">=0.7.0",
    "graphql-tools": "^0.6.5"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "typescript": "^1.8.10",
    "typings": "^1.3.3",
    "semantic-release": "^4.3.5"
  },
  "typings": "dist/index.d.ts"
}
